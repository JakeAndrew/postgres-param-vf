ALTER TABLE project_blog RENAME COLUMN time TO ts;
ALTER TABLE project_blog RENAME TO blog_post;
ALTER TABLE role_event RENAME COLUMN time TO ts;
ALTER TABLE doc_event RENAME COLUMN time TO ts;
