CREATe TABLE "comment_retraction"("id" SERIAL PRIMARY KEY UNIQUE,"ts" TIMESTAMP NOT NULL,"reason" VARCHAR NOT NULL,"comment" INT8 NOT NULL);
ALTER TABLE "comment_retraction" ADD CONSTRAINT "comment_retraction_comment_fkey" FOREIGN KEY("comment") REFERENCES "comment";
CREATe TABLE "rethread"("id" SERIAL PRIMARY KEY UNIQUE,"ts" TIMESTAMP NOT NULL,"moderator" INT8 NOT NULL,"old_comment" INT8 NOT NULL,"reason" VARCHAR NOT NULL);
ALTER TABLE "rethread" ADD CONSTRAINT "rethread_moderator_fkey" FOREIGN KEY("moderator") REFERENCES "user";
ALTER TABLE "rethread" ADD CONSTRAINT "rethread_old_comment_fkey" FOREIGN KEY("old_comment") REFERENCES "comment";
ALTER TABLE "comment_rethread" ADD COLUMN "rethread" INT8 NOT NULL;
ALTER TABLE "comment_rethread" ADD COLUMN "old_comment" INT8 NOT NULL;
ALTER TABLE "comment_rethread" ADD COLUMN "new_comment" INT8 NOT NULL;
ALTER TABLE "comment_rethread" ADD CONSTRAINT "comment_rethread_rethread_fkey" FOREIGN KEY("rethread") REFERENCES "rethread";
ALTER TABLE "comment_rethread" ADD CONSTRAINT "comment_rethread_old_comment_fkey" FOREIGN KEY("old_comment") REFERENCES "comment";
ALTER TABLE "comment_rethread" ADD CONSTRAINT "comment_rethread_new_comment_fkey" FOREIGN KEY("new_comment") REFERENCES "comment";
ALTER TABLE "comment_rethread" DROP COLUMN "reason";
ALTER TABLE "comment_rethread" DROP COLUMN "comment";
ALTER TABLE "comment_rethread" DROP COLUMN "new_discussion";
ALTER TABLE "comment_rethread" DROP COLUMN "new_parent";
ALTER TABLE "comment_rethread" DROP COLUMN "old_discussion";
ALTER TABLE "comment_rethread" DROP COLUMN "old_parent";
ALTER TABLE "comment_rethread" DROP COLUMN "moderator";
ALTER TABLE "comment_rethread" DROP COLUMN "ts";
ALTER TABLE "comment" ADD COLUMN "rethreaded" INT8 NULL;
ALTER TABLE "comment" ADD CONSTRAINT "comment_rethreaded_fkey" FOREIGN KEY("rethreaded") REFERENCES "rethread";
ALTER TABLE "comment_closure" RENAME COLUMN "user" TO "closed_by";
ALTER TABLE "comment_closure" ADD CONSTRAINT "comment_closure_closed_by_fkey" FOREIGN KEY("closed_by") REFERENCES "user";
